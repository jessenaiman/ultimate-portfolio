---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/ui/Hero.astro';
import HomeContent from '../content/home.mdx';
import Cover from '../content/resume/cover.md';
import Resume from '../content/resume/resume.md';
import Experience from '../content/experience.mdx';
---

<Layout title="Jesse Naiman - Senior Developer">
  <main>
    <Hero 
      headline="Jesse Naiman"
      subheading="Senior Developer & Community Support. Over two decades of experience in web development, community support, and technical leadership. Specializing in creating efficient solutions to complex problems."
    >
      <div slot="actions" class="flex flex-wrap justify-center gap-4">
        <a href="#resume-section" class="btn btn-primary scroll-smooth">
          View Resume
        </a>
        <a href="mailto:jessenaiman@gmail.com" class="btn btn-outline">
          Contact Me
        </a>
      </div>
    </Hero>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 px-4 py-20">
      <!-- Main content: Tabs -->
      <div id="resume-section" class="lg:col-span-2 scroll-mt-20">
        <div role="tablist" class="tabs tabs-lifted shadow-lg border-primary/20 border rounded-box">
          <!-- Cover Letter Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Cover Letter" checked />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <Cover />
            </article>
          </div>

          <!-- Resume Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Resume" />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <Resume />
            </article>
          </div>

          <!-- Skills Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Skills" />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <HomeContent />
            </article>
          </div>

          <!-- Experience Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Experience" />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <Experience />
            </article>
          </div>
        </div>
      </div>

      <!-- Side content: Contact Card -->
      <div class="lg:col-span-1">
        <div class="card bg-base-100 shadow-xl sticky top-20">
          <div class="card-body">
            <h2 class="card-title text-3xl">Let's Work Together</h2>
            <p class="text-base-content/80">Looking for a versatile developer who can bring your ideas to life? Let's connect and discuss how I can help with your next project.</p>
            <div class="card-actions justify-start flex-col gap-4 mt-4">
              <a href="tel:+14164208330" class="btn btn-outline w-full">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                +1 416 420 8330
              </a>
              <a href="mailto:jessenaiman@gmail.com" class="btn btn-outline w-full">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                jessenaiman@gmail.com
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .animate-gradient-x {
    animation: gradient-x 15s ease infinite;
    background-size: 200% 200%;
  }
</style>
