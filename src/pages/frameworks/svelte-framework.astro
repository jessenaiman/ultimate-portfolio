---
// src/pages/svelte-framework.astro
import Layout from '../../layouts/Layout.astro';
import { Code } from 'astro:components';
import { Content as SvelteContent } from '../../content/svelte-framework.md';
import DemoCard from '../../components/ui/DemoCard.astro';
import { Icon } from 'astro-icon/components';

// Import interactive Svelte components
import TodoTools from '../../components/Svelte/TodoTools.svelte';
import DevTools from '../../components/Svelte/DevTools.svelte';
import SvelteHero from '../../components/Svelte/Hero.svelte';

// Import raw source code for display
import todoToolsSource from '../../components/Svelte/TodoTools.svelte?raw';
import devToolsSource from '../../components/Svelte/DevTools.svelte?raw';
---

<Layout 
  title="Svelte Framework Demo" 
  description="An honest demonstration of interactive Svelte components running in an Astro project."
  learnMoreTitle="Learn more about Svelte"
  docsUrl="https://svelte.dev/docs"
>
  <!-- Framework-specific hero -->
  <div slot="hero">
    <SvelteHero client:load />
  </div>
  
  <!-- Markdown content -->
  <SvelteContent slot="content" />

  <!-- Interactive Demos -->
  <div slot="demos" class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <DemoCard sourceFileName="TodoTools.svelte">
      <div slot="demo">
        <TodoTools client:only='svelte' />
      </div>
      <div slot="code">
        <Code code={todoToolsSource} lang="svelte" theme="github-dark" />
      </div>
    </DemoCard>

    <DemoCard sourceFileName="DevTools.svelte">
      <div slot="demo">
        <DevTools client:only='svelte' />
      </div>
      <div slot="code">
        <Code code={devToolsSource} lang="svelte" theme="github-dark" />
      </div>
    </DemoCard>
  </div>
</Layout>