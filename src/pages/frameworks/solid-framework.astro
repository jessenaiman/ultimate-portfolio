---
// src/pages/solid-framework.astro
import Layout from '../../layouts/Layout.astro';
import { Code } from 'astro:components';
import { Content as SolidContent } from '../../content/info/solid-framework.md';
import { Icon } from 'astro-icon/components';
import DemoCard from '../../components/ui/DemoCard.astro';

// Import interactive SolidJS components
import SolidHero from '../../components/Solid/Hero.jsx';
import SolidFeatures from '../../components/Solid/Features.jsx';

// Import raw source code for display
import solidFeaturesSource from '../../components/Solid/Features.jsx?raw';
---

<Layout 
  title="SolidJS Framework Demo" 
  description="An honest demonstration of interactive SolidJS components running in an Astro project."
  learnMoreTitle="Learn more about SolidJS"
  docsUrl="https://www.solidjs.com/docs/latest"
>
  <!-- Framework-specific hero -->
  <div slot="hero">
    <SolidHero client:load />
  </div>
  
  <!-- Markdown content goes in the content slot -->
  <SolidContent slot="content" />

  <!-- Interactive Demos - Slot for demos -->
  <div slot="demos" class="grid grid-cols-1 md:grid-cols-2 gap-8">

    <DemoCard
      title="Features Section"
      description="A features section demonstrating conditional rendering and component composition in SolidJS."
      iconName="mdi:view-list"
      sourceFileName="Features.jsx"
    >
      <div slot="demo" class="p-4">
        <SolidFeatures client:only='solid-js' />
      </div>
      <div slot="code">
        <Code code={solidFeaturesSource} lang="jsx" theme="github-dark" />
      </div>
    </DemoCard>
  </div>
</Layout>