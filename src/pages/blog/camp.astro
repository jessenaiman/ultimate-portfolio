---
import Layout from "../../layouts/Layout.astro";
import { Content } from "../../content/camp.mdx";

const headline = "Summer Camp Chronicles";
const subheading = "Game development stories and experiences from summer camp programming sessions.";
---

<Layout title={headline} description={subheading}>

  <main class="container mx-auto px-4 py-16">

    <div class="hero bg-gradient-to-r from-primary to-secondary text-primary-content rounded-box mb-12">
      <div class="hero-content text-center py-12">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold">{headline}</h1>
          <p class="py-6 text-lg">{subheading}</p>
        </div>
      </div>
    </div>

    <article class="prose prose-lg max-w-none">
      <Content />
    </article>

  </main>

</Layout>
