            <div class="mockup-browser border border-base-300">
              <div class="mockup-browser-toolbar">
                <div class="input border border-base-300">https://example.com</div>
              </div>
              <div class="flex justify-center px-4 py-16 bg-base-200">
                <div class="relative w-full max-w-md">
                  <div class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-lg blur opacity-25"></div>
                  <div class="relative bg-base-100 p-6 rounded-lg">
                    <h4 class="font-bold text-lg mb-4">Interactive Counter</h4>
                    <div id="counter" class="text-4xl font-bold text-center my-6">0</div>
                    <div class="flex justify-center gap-4">
                      <button onclick="document.getElementById('counter').textContent = parseInt(document.getElementById('counter').textContent) - 1" class="btn btn-outline">-</button>
                      <button onclick="document.getElementById('counter').textContent = parseInt(document.getElementById('counter').textContent) + 1" class="btn btn-primary">+</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="divider md:divider-horizontal">VS</div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-4">Traditional SPA</h3>
            <p class="mb-4">Traditional SPAs ship the entire app as JavaScript, even for static content.</p>
            <div class="mockup-browser border border-base-300 opacity-50">
              <div class="mockup-browser-toolbar">
                <div class="input border border-base-300">https://example.com</div>
              </div>
              <div class="flex justify-center px-4 py-16 bg-base-200">
                <div class="bg-base-300/50 p-6 rounded-lg w-full max-w-md text-center">
                  <p class="text-base-content/50">Entire app hydrated with JavaScript</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Integration with Other Frameworks -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold mb-6">Framework Integrations</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {['React', 'Vue', 'Svelte', 'Solid', 'Preact', 'Alpine', 'Lit', 'Qwik'].map(framework => (
          <div class="card bg-base-200/50 p-4 flex items-center justify-center hover:bg-base-200/80 transition-colors">
            <img 
              src={"/assets/frameworks/" + framework.toLowerCase() + ".svg"}
              alt={framework}
              class="h-12 w-12 object-contain"
              onerror={`this.onerror=null;this.src='https://via.placeholder.com/48?text='+this.alt`}
            />
            <span class="mt-2 font-medium">{framework}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center py-16 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl">
      <h2 class="text-3xl font-bold mb-6">Ready to build something amazing?</h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto mb-8">
        Start building your next project with Astro today and experience the future of web development.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="https://docs.astro.build/en/getting-started/" 
          target="_blank" 
