---
// Simple test component to debug DaisyUI theme switching
---

<div class="p-8 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">DaisyUI Theme Test</h1>
  
  <!-- Theme Toggle Button -->
  <button 
    id="theme-test-toggle" 
    class="btn btn-primary mb-6"
    onclick="toggleTheme()"
  >
    Toggle Theme
  </button>
  
  <!-- DaisyUI Component Examples -->
  <div class="space-y-4">
    <!-- Cards -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary">Card Title</h2>
        <p class="text-base-content">This is a test card to check theme colors.</p>
        <div class="card-actions justify-end">
          <button class="btn btn-secondary">Action</button>
        </div>
      </div>
    </div>
    
    <!-- Badges -->
    <div class="flex gap-2">
      <div class="badge badge-primary">Primary</div>
      <div class="badge badge-secondary">Secondary</div>
      <div class="badge badge-accent">Accent</div>
      <div class="badge badge-outline">Outline</div>
    </div>
    
    <!-- Alert -->
    <div class="alert alert-info">
      <span>Info alert to test semantic colors</span>
    </div>
    
    <!-- Form Elements -->
    <div class="form-control">
      <label class="label">
        <span class="label-text">Test Input</span>
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered" />
    </div>
    
    <!-- Background Test -->
    <div class="bg-base-200 p-4 rounded">
      <p class="text-base-content">Base-200 background with base-content text</p>
    </div>
    
    <div class="bg-base-300 p-4 rounded">
      <p class="text-base-content">Base-300 background with base-content text</p>
    </div>
  </div>
</div>

<script>
  // Test if our theme toggle function works
  function toggleTheme() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    
    console.log('Theme changed to:', newTheme);
    console.log('Current data-theme:', document.documentElement.getAttribute('data-theme'));
  }
  
  // Log current theme on load
  console.log('Initial theme:', document.documentElement.getAttribute('data-theme'));
</script>
