---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/ui/Hero.astro";
import DemoCard from "../components/ui/DemoCard.astro";
import { Code } from 'astro:components';
import { Content as PollinateContent } from "../content/info/pollinate-ai.md";

// Import the main interactive component and its source code
import PollinationsDemo from "../components/React/Machine.tsx";
import pollinationsDemoSource from "../components/React/Machine.tsx?raw";

const headline = "Pollinate AI Demo";
const subheading = "Explore generative React Hooks for text, image, and chat.";
---

<Layout title={headline} description={subheading}>
  <Hero {headline} {subheading} icon="mdi:robot">
    <div slot="actions" class="flex justify-center space-x-4">
      <a href="#demos" class="btn btn-primary">View Demo</a>
      <a href="https://github.com/pollinations/pollinations" target="_blank" rel="noopener noreferrer" class="btn btn-outline">Official Docs</a>
    </div>
  </Hero>

  <main class="container mx-auto px-4 py-16">
    <article class="prose max-w-none mb-16">
      <PollinateContent />
    </article>

    <div class="divider my-12" id="demos">Interactive Demo</div>

    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <DemoCard
          title="Pollinations Playground"
          description="A playground showcasing the versatility of the Pollinations API for text, image, and chat generation."
          groupName="pollinate-ai-demo"
        >
          <PollinationsDemo slot="demo" client:only="react" />
          <Code slot="source" code={pollinationsDemoSource} lang="tsx" />
        </DemoCard>
      </div>
    </section>
  </main>
</Layout>