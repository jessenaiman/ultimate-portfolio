---
import Layout from '../layouts/Layout.astro';
import Cover from '../content/resume/cover.md';
import Resume from '../content/resume/resume2.md';
import ContactMeCard from '../components/ui/ContactMeCard.astro';
---

<Layout title="Jesse Naiman - Senior Developer">
  <main>
    <!-- Compact header to keep more above the fold (replaces tall hero) -->
    <section class="card bg-base-100 shadow-md border border-base-300 mb-8">
      <div class="card-body gap-4 lg:flex lg:items-center lg:justify-between">
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold">Jesse Naiman</h1>
          <p class="text-base-content/70 mt-2 max-w-3xl">
            Senior Developer & Community Support â€” over two decades building efficient web solutions, leading teams, and simplifying complex problems.
          </p>
        </div>
        <div class="flex flex-wrap gap-3">
          <a href="#resume-section" class="btn btn-primary">View Resume</a>
          <a href="#contact" class="btn btn-outline">Contact Me</a>
        </div>
      </div>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 px-4 py-20">
      <!-- Main content: Tabs -->
      <div id="resume-section" class="lg:col-span-2 scroll-mt-20">
        <div role="tablist" class="tabs tabs-lifted shadow-lg border-primary/20 border rounded-box">
          <!-- Cover Letter Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Cover Letter" checked />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <Cover />
            </article>
          </div>

          <!-- Resume Tab -->
          <input type="radio" name="resume_tabs" role="tab" class="tab" aria-label="Resume" />
          <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
            <article class="prose lg:prose-xl max-w-none">
              <Resume />
            </article>
          </div>
        </div>
      </div>

      <!-- Side content: Contact Card (component includes Heyform + reveal) -->
      <div id="contact" class="lg:col-span-1">
        <ContactMeCard />
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .animate-gradient-x {
    animation: gradient-x 15s ease infinite;
    background-size: 200% 200%;
  }
</style>
