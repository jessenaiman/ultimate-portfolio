---
import { SEO } from "astro-seo";

interface Props {
  title: string;
  bgColor?: string;
}

const { title, bgColor = "#0F1115" } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
    integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
    crossorigin="anonymous"
  />
  <meta name="generator" content={Astro.generator} />
  <meta name="view-transition" content="same-origin" />
  <SEO
    title={`${title} - Ultimate Forward Stack Developer`}
    titleTemplate="%s - Future Forward Development"
    description="Your comprehensive guide to building modern websites with Astro Framework"
    canonical="https://portfolio.omega-spiral.com/"
    noindex={false}
    nofollow={false}
    openGraph={{
      basic: {
        title: title || "Jesse's Portfolio",
        type: "website",
        image: "/astro-template.png",
        url: "https://portfolio.omega-spiral.com/",
      },
      optional: {
        locale: "en_US",
        siteName: "Jesse's Portfolio",
        description:
          "Discover the power of multi-framework development with our ultimate Astro template. From React to Vue, Svelte to Solid - experience them all in one blazing-fast website.",
      },
      image: {
        alt: "Theme Preview",
        width: 1200,
        height: 630,
        type: "image/png",
      },
    }}
    twitter={{
      card: "summary_large_image",
      site: "@o",
      creator: "@NaimanJesse",
      title: title || "Astro Framework Theme",
      description:
        "Discover the power of multi-framework development with our ultimate Astro template.",
      image: "/astro-template.png",
      imageAlt: "Astro Framework Theme Preview",
    }}
    extend={{
      meta: [
        { name: "twitter:image", content: "/astro-template.png" },
        { name: "twitter:title", content: title },
        {
          name: "twitter:description",
          content:
            "Discover the power of multi-framework development with our ultimate Astro template. From React to Vue, Svelte to Solid - experience them all in one blazing-fast website.",
        },
        { name: "theme-color", content: bgColor },
        { name: "apple-mobile-web-app-capable", content: "yes" },
        { name: "apple-mobile-web-app-status-bar-style", content: "black" },
        { name: "author", content: "Jesse Naiman" },
        {
          name: "keywords",
          content:
            "astro, framework, web development, react, vue, svelte, solid",
        },
      ],
      link: [
        {
          rel: "canonical",
          href: "portfolio.omega-spiral.com",
        },
        { rel: "icon", type: "image/png", href: "/favicon.png" },
      ],
    }}
  />
</head>
