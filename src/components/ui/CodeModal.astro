---
interface Props {
  id: string;
  title: string;
  code: string;
  lang?: string;
  showLineNumbers?: boolean;
  wrapLongLines?: boolean;
  githubUrl?: string;
  fileName?: string;
  maxLines?: number;
}

const { 
  id, 
  title, 
  code, 
  lang = 'astro',
  showLineNumbers = false,
  wrapLongLines = true,
  githubUrl,
  fileName,
  maxLines = 50
} = Astro.props;

// Truncate code if it's too long
const isTruncated = code.split('\n').length > maxLines;
const displayCode = isTruncated 
  ? code.split('\n').slice(0, maxLines).join('\n') + '\n// ... (truncated)'
  : code;

// Escape HTML entities in code for proper display
const escapedCode = displayCode
  .replace(/&/g, '&amp;')
  .replace(/</g, '&lt;')
  .replace(/>/g, '&gt;')
  .replace(/"/g, '&quot;')
  .replace(/'/g, '&#039;');

// Get the appropriate language class for syntax highlighting
const languageClass = lang ? `language-${lang}` : '';
const lineNumbersClass = showLineNumbers ? 'line-numbers' : '';
---

<dialog id={id} class="modal modal-bottom sm:modal-middle backdrop-blur-sm">
  <div class="modal-box max-w-4xl max-h-[90vh] p-0 overflow-hidden">
    <div class="flex items-center justify-between px-6 py-4 border-b border-base-300 bg-base-200">
      <h3 class="font-bold text-lg">{title || 'Code Sample'}</h3>
      <form method="dialog">
        <button class="btn btn-ghost btn-circle btn-sm" aria-label="Close">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </form>
    </div>
    
    <div class="p-0 overflow-auto max-h-[calc(90vh-8rem)] bg-base-300">
      <pre class={`m-0 p-4 ${languageClass} ${lineNumbersClass} ${wrapLongLines ? 'whitespace-pre-wrap' : 'whitespace-pre'} overflow-auto`}>
        <code class={languageClass} set:html={escapedCode} />
      </pre>
      
      {isTruncated && githubUrl && (
        <div class="bg-base-200/50 p-4 border-t border-base-300 text-center">
          <p class="text-sm text-base-content/70 mb-2">
            Showing first {maxLines} lines. View full file on GitHub for complete code.
          </p>
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn btn-sm btn-outline gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            {fileName ? `View ${fileName} on GitHub` : 'View on GitHub'}
          </a>
        </div>
      )}
    </div>
    
    <div class="modal-action p-4 border-t border-base-300 bg-base-200/50 justify-between">
      <div class="flex items-center gap-2 text-sm">
        <span class="badge badge-ghost">{lang}</span>
        <button 
          class="btn btn-ghost btn-sm gap-1"
          onclick={`navigator.clipboard.writeText(${JSON.stringify(code)})`}
          aria-label="Copy code to clipboard"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
          </svg>
          {isTruncated ? 'Copy Snippet' : 'Copy Code'}
        </button>
        {isTruncated && githubUrl && (
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn btn-ghost btn-sm gap-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4m-8 0l-4-4 4-4" />
            </svg>
            View Full File
          </a>
        )}
      </div>
      <div class="flex gap-2">
        {githubUrl && (
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn btn-outline btn-sm gap-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            {fileName ? fileName : 'GitHub'}
          </a>
        )}
        <form method="dialog">
          <button class="btn btn-primary btn-sm">Close</button>
        </form>
      </div>
    </div>
  </div>
  
  <form method="dialog" class="modal-backdrop">
    <button>Close</button>
  </form>
</dialog>
