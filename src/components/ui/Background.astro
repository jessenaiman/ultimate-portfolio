---
// No props needed - using daisyUI theme variables instead
---

<div class="fixed inset-0 -z-50 transition-colors duration-300 bg-base-100">
    <!-- Main gradient orbs using daisyUI theme colors -->
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-secondary/20 rounded-full blur-3xl animate-float animation-delay-1000"></div>
    
    <!-- Additional decorative orbs using daisyUI theme colors -->
    <div class="absolute top-1/3 right-1/3 w-32 h-32 bg-accent/20 rounded-full blur-2xl animate-float animation-delay-500"></div>
    <div class="absolute bottom-1/3 left-1/3 w-48 h-48 bg-info/20 rounded-full blur-2xl animate-float animation-delay-1500"></div>
    
    <!-- Small particle effects using daisyUI theme colors -->
    <div class="absolute top-1/2 left-1/2 w-16 h-16 bg-warning/30 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-1/2 right-1/2 w-24 h-24 bg-success/20 rounded-full blur-xl animate-pulse"></div>

    <!-- Main grid pattern using daisyUI theme colors -->
    <div class="absolute inset-0 bg-size-[64px_64px] opacity-20 backdrop-blur-[100px] transition-opacity duration-300 bg-grid-base-content/5"></div>
    
    <!-- Vignette effect using daisyUI theme colors -->
    <div class="absolute inset-0 pointer-events-none transition-opacity duration-300 bg-gradient-radial from-transparent to-base-300/40"></div>
</div>

<style>
    /* Only keeping animation keyframes and delays, removing custom theme variables */
    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    .animation-delay-500 {
        animation-delay: 500ms;
    }

    .animation-delay-1000 {
        animation-delay: 1000ms;
    }

    .animation-delay-1500 {
        animation-delay: 1500ms;
    }
    
    /* Add utility class for radial gradient that's not in Tailwind by default */
    .bg-gradient-radial {
        background-image: radial-gradient(var(--tw-gradient-stops));
    }
    
    /* Add utility class for grid background */
    .bg-grid-base-content\/5 {
        background-image: linear-gradient(hsl(var(--bc) / 0.05) 1px, transparent 1px),
            linear-gradient(to right, hsl(var(--bc) / 0.05) 1px, transparent 1px);
    }
</style>