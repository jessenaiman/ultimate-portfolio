---
// src/components/ui/Hero.astro
// Unified Hero component using DaisyUI: https://daisyui.com/components/hero/
import { Icon } from 'astro-icon/components';

interface Props {
  headline: string;
  subheading: string;
  bgImage?: string;
  bgGradient?: boolean;
  minHeight?: string;
  icon?: string;
}

const { 
  headline, 
  subheading, 
  icon = "logos:astro-icon",
  bgImage, 
  bgGradient = false
} = Astro.props;

// Documentation references:
// - DaisyUI Hero: https://daisyui.com/components/hero/
// - Tailwind Backgrounds: https://tailwindcss.com/docs/background-image
---

<div class="hero bg-gradient-to-br from-base-200 to-base-300 rounded-3xl mb-12 shadow-2xl transform transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20">
  <div class="hero-content text-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      {/* Framework icons */}
      <slot name="icons">
        <div class="flex justify-center gap-4 mb-8">
          <Icon name={icon} class="w-16 h-16" />
        </div>
      </slot>
      
      {/* Headline and subheading */}
      <h1 class="text-5xl md:text-7xl font-bold mb-4">{headline}</h1>
      <p class="text-lg md:text-xl mb-8 opacity-90">{subheading}</p>
      
      {/* Action buttons */}
      <div class="flex flex-wrap justify-center gap-4">
        <slot name="actions" />
      </div>
      
      {/* Stats section */}
      <slot name="stats" />
      
      {/* Features section */}
      <slot name="features" />
    </div>
  </div>
</div>
