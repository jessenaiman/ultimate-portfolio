--- 
// src/components/ui/Hero.astro
// Unified Hero component using DaisyUI: https://daisyui.com/components/hero/
interface Props {
  headline: string;
  subheading: string;
}

const { headline, subheading } = Astro.props;
---
<div class="hero min-h-[70vh] bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">{headline}</h1>
      <p class="py-6">{subheading}</p>
      <!-- Slot for framework-specific buttons or interactive elements -->
      <slot name="actions" />
    </div>
  </div>
</div>
