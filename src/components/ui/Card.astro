---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-200 hover:border-primary/20">
	<div class="card-body">
		<a href={href} class="group block">
			<h2 class="card-title text-primary group-hover:text-primary-focus transition-colors duration-200">
				{title}
				<span class="transition-transform duration-200 group-hover:translate-x-1">&rarr;</span>
			</h2>
			<p class="text-base-content/80 mt-2">
				{body}
			</p>
		</a>
	</div>
</div>
