---
// src/components/ui/DemoCard.astro
interface Props {
  title: string;
  description: string;
  iconName: string;
  sourceFileName: string;
}

const { 
  title,
  description,
  iconName,
  sourceFileName 
} = Astro.props;

const uniqueId = `demo-card-${Math.random().toString(36).substring(2, 9)}`;
---
<div class="w-full bg-base-200/60 shadow-xl rounded-lg h-full flex flex-col">
  <div role="tablist" class="tabs tabs-boxed tabs-sm p-2 bg-base-300/40 rounded-t-lg">
    <input type="radio" name={uniqueId} role="tab" class="tab" aria-label="Demo" checked />
    <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-b-lg flex-grow">
      <slot name="demo" />
    </div>

    <input type="radio" name={uniqueId} role="tab" class="tab" aria-label="Code" />
    <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-b-lg p-4 flex-grow">
      <div class="overflow-x-auto">
        <h3 class="text-sm font-semibold mb-2">{sourceFileName}</h3>
        <slot name="code" />
      </div>
    </div>
  </div>
</div>
