---
import TabbedDemo from './TabbedDemo.astro';

interface Props {
  title: string;
  description: string;
  groupName: string; // Unique name for the tab group
}

const { title, description, groupName } = Astro.props;
---

<div class="space-y-4">
  <div class="text-center md:text-left">
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="text-base-content/70">{description}</p>
  </div>
  <TabbedDemo {groupName}>
    <div slot="demo">
      <slot name="demo" />
    </div>
    <div slot="source">
      <slot name="source" />
    </div>
  </TabbedDemo>
</div>
