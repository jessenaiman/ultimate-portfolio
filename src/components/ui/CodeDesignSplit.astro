---
interface Props {
  code: string;
  design: string;
  title: string;
  description?: string;
}

const { code, design, title, description } = Astro.props;
---

<div class="w-full">
  <div class="flex flex-col gap-4">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-2xl font-bold">{title}</h3>
        {description && <p class="text-base-content/70">{description}</p>}
      </div>
      <div class="flex items-center gap-2">
        <label class="swap swap-rotate">
          <!-- this hidden checkbox controls the state -->
          <input type="checkbox" class="theme-controller" value="synthwave" />
          
          <!-- Code icon -->
          <div class="swap-off flex items-center gap-2">
            <span class="text-sm font-medium">Code</span>
          </div>
          
          <!-- Design icon -->
          <div class="swap-on flex items-center gap-2">
            <span class="text-sm font-medium">Design</span>
          </div>
        </label>
      </div>
    </div>

    <div class="divider my-0"></div>

    <div class="swap w-full">
      <!-- Code View -->
      <div class="swap-off w-full">
        <div class="mockup-code w-full overflow-y-auto max-h-[80vh]">
          <pre data-prefix="$"><code>{code}</code></pre>
        </div>
      </div>

      <!-- Design View -->
      <div class="swap-on w-full">
        <div class="card bg-base-200 p-6 w-full">
          <div class="prose max-w-none">
            <Fragment set:html={design} />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- No custom CSS needed - using daisyUI components -->
