---
// Follows daisyUI navbar docs: https://daisyui.com/components/navbar/
// Follows Astro styling docs: https://docs.astro.build/en/guides/styling/
import { Icon } from "astro-icon/components";
import { navigationItems } from "../../data/navigation";
import ThemeController from "./ThemeController.astro";
---

<!-- daisyUI navbar: https://daisyui.com/components/navbar/ -->
<!-- Astro styling: https://docs.astro.build/en/guides/styling/ -->
<nav class="navbar bg-base-100 sticky top-0 z-50 shadow-sm">
  <div class="navbar-start">
    <!-- Mobile menu -->
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost lg:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-1 p-2 shadow bg-base-200 rounded-box w-56">
        {navigationItems.map((item) => (
          !item.children ? (
            <li>
              <a href={item.path} class="flex items-center">
                <Icon name={item.icon} class="w-5 h-5" /> {item.displayName}
                {item.badge && <span class={`badge ${item.badgeColor || 'badge-ghost'} ml-2`}>{item.badge}</span>}
                {item.isNew && <span class="badge badge-xs badge-secondary">NEW</span>}
              </a>
            </li>
          ) : (
            <li>
              <details>
                <summary class="flex items-center">
                  <Icon name={item.icon} class="w-5 h-5" /> {item.displayName}
                </summary>
                <ul>
                  {item.children.map((child) => (
                    <li>
                      <a href={child.path} class="flex items-center">
                        <Icon name={child.icon} class="w-5 h-5" /> {child.displayName}
                        {child.badge && <span class={`badge ${child.badgeColor || 'badge-ghost'} ml-2`}>{child.badge}</span>}
                        {child.isNew && <span class="badge badge-xs badge-secondary">NEW</span>}
                      </a>
                    </li>
                  ))}
                </ul>
              </details>
            </li>
          )
        ))}
      </ul>
    </div>
    <a href="/" class="btn btn-ghost text-xl normal-case">Portfolio</a>
  </div>

  <div class="navbar-center hidden lg:flex">
    <!-- Desktop menu -->
    <ul class="menu lg:menu-horizontal bg-base-200 rounded-box">
      {navigationItems.map((item) => (
        !item.children ? (
          <li>
            <a href={item.path} class="flex items-center">
              <Icon name={item.icon} class="w-5 h-5" />
              {item.displayName}
              {item.badge && <span class={`badge ${item.badgeColor || 'badge-ghost'} ml-2`}>{item.badge}</span>}
              {item.isNew && <span class="badge badge-xs badge-secondary">NEW</span>}
            </a>
          </li>
        ) : (
          <li>
            <details>
              <summary class="flex items-center">
                <Icon name={item.icon} class="w-5 h-5" />
                {item.displayName}
              </summary>
              <ul>
                {item.children.map((child) => (
                  <li>
                    <a href={child.path} class="flex items-center">
                      <Icon name={child.icon} class="w-5 h-5" />
                      {child.displayName}
                      {child.badge && <span class={`badge ${child.badgeColor || 'badge-ghost'} ml-2`}>{child.badge}</span>}
                      {child.isNew && <span class="badge badge-xs badge-secondary">NEW</span>}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </li>
        )
      ))}
    </ul>
  </div>

  <div class="navbar-end">
    <ThemeController />
  </div>
</nav>


