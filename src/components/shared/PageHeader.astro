---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  title, 
  subtitle, 
  centered = false,
  size = 'lg' 
} = Astro.props;
---

<header class:list={['page-header', { 'centered': centered }]}>
  <h1 class:list={['page-title', `size-${size}`]}>
    {title}
  </h1>
  {subtitle && (
    <p class="page-subtitle">
      {subtitle}
    </p>
  )}
</header>
