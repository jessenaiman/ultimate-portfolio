---
const { title, description = "Portfolio site" } = Astro.props;
import "../../styles/global.css";
---
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="bg-base-100 text-base-content font-sans flex flex-col min-h-screen">
    <!-- Inserted Menu.astro navbar: https://daisyui.com/components/navbar/ -->
    <!-- Astro layout conventions: https://docs.astro.build/en/guides/layouts/ -->
    <Menu />
    <slot />
  </body>
</html>
