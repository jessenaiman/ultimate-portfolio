---
import { Icon } from 'astro-icon/components'

// Framework data structure - all framework info in one place
const frameworks = [
  {
    name: 'mdi:react',
    displayName: 'React',
    path: '/react',
    color: '#61DAFB'
  },
  {
    name: 'mdi:vuejs',
    displayName: 'Vue',
    path: '/vue',
    color: '#4FC08D'
  },
  {
    name: 'mdi:language-typescript',
    displayName: 'Svelte',
    path: '/svelte',
    color: '#FF3E00'
  },
  {
    name: 'mdi:language-javascript',
    displayName: 'SolidJS',
    path: '/solid',
    color: '#2C4F7C'
  },
  {
    name: 'mdi:code-brackets',
    displayName: 'Remix',
    path: '/remix',
    color: '#000000'
  }
];

// Helper function to capitalize first letter
const capitalize = (str: string) => str.charAt(0).toUpperCase() + str.slice(1);
---

<section id="frameworks" class="py-20 page-content">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-cal font-bold text-center mb-12 bg-linear-to-r from-orange-500 via-purple-500 to-blue-500 bg-clip-text text-transparent">
            Available Frameworks
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {frameworks.map((framework, index) => (
                <a
                    href={framework.path}
                    class="group relative p-6 bg-gray-900/50 backdrop-blur-sm rounded-2xl border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]"
                    style={`animation: slide-from-right 0.5s ease-out ${index * 0.1}s both;`}
                >
                    <div class="flex items-center gap-4">
                        <div 
                            class="w-14 h-14 rounded-xl flex items-center justify-center transition-transform duration-300 group-hover:scale-110"
                            style={`background-color: ${framework.color}15`}
                        >
                            <Icon 
                                name={framework.name} 
                                class="w-8 h-8 transition-all duration-300 group-hover:scale-110" 
                                style={`color: ${framework.color}`}
                            />
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-white mb-1 transition-colors duration-300" style={`group-hover:text-[${framework.color}]`}>
                                {capitalize(framework.displayName)}
                            </h3>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </div>
</section>

<style>
    section {
        perspective: 1000px;
    }
    
    .grid > a {
        transform: translateZ(0);
        transition: transform 0.3s ease;
    }
    
    .grid > a:hover {
        transform: translateZ(20px);
    }
</style>
