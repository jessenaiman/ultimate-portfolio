---
// src/layouts/FrameworkLayout.astro
// Now using the unified BaseLayout with framework variant
import Layout from './Layout.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  docsUrl?: string;
  learnMoreTitle?: string;
  maxWidth?: 'none' | 'prose' | 'container' | 'screen' | 'wide';
}

const { 
  title, 
  description, 
  docsUrl,
  learnMoreTitle = "Learn more about this framework",
  maxWidth = 'wide'
} = Astro.props;
---

<Layout 
  title={title} 
  description={description}
  variant="framework"
  maxWidth={maxWidth}
  padding="lg"
  docsUrl={docsUrl}
  learnMoreTitle={learnMoreTitle}
>
  <!-- Hero Block -->
  <div slot="hero">
    <slot name="hero" />
  </div>
  
  <!-- Content Block -->
  <div slot="content">
    <slot name="content" />
  </div>
  
  <!-- Demos Section -->
  <div slot="demos">
    <slot name="demos" />
  </div>
</BaseLayout>