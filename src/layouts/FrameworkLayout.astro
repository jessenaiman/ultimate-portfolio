---
// src/layouts/FrameworkLayout.astro
import Layout from './Layout.astro';
import Hero from '../components/ui/Hero.astro';

interface Props {
  title: string;
  description: string;
  headline: string;
  subheading: string;
  icon: string;
  docsUrl: string;
}

const { title, description, headline, subheading, icon, docsUrl } = Astro.props;
---

<Layout {title} {description}>
  <Hero {headline} {subheading} {icon}>
    <div slot="actions" class="flex justify-center space-x-4">
      <a href="#demos" class="btn btn-primary">View Demos</a>
      <a href={docsUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline">Official Docs</a>
    </div>
  </Hero>

  <main class="container mx-auto px-4 py-16">
    <article class="prose max-w-none mb-16">
      <slot name="content" />
    </article>

    <div class="divider my-12" id="demos">Interactive Demos</div>

    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <slot name="demos" />
      </div>
    </section>
  </main>

  <!-- Modals for Source Code -->
  <slot name="modals" />
</Layout>