---
// src/layouts/FrameworkLayout.astro
import BaseLayout from './BaseLayout.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  docsUrl?: string;
  learnMoreTitle?: string;
}

const { 
  title, 
  description, 
  docsUrl,
  learnMoreTitle = "Learn more about this framework"
} = Astro.props;
---

<BaseLayout {title} {description}>
  <!-- Hero Block -->
  <slot name="hero" />

  <!-- Markdown Content Block -->
  <section class="mb-8">
    <div tabindex="0" class="collapse collapse-arrow border border-base-300 bg-base-200 rounded-box">
      <div class="collapse-title text-xl font-medium">
        {learnMoreTitle}
      </div>
      <div class="collapse-content prose max-w-none p-4">
        <slot name="content" />
        {docsUrl && (
          <div class="mt-4">
            <a href={docsUrl} target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline">
              Official Docs
            </a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Demos Section -->
  <div class="divider my-8" id="demos">Interactive Demos</div>
  <section>
    <slot name="demos" />
  </section>
</BaseLayout>