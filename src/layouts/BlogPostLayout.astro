---
// 1. The frontmatter prop gives access to frontmatter and other data
// Documentation: https://docs.astro.build/en/guides/layouts/
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="container mx-auto px-4 py-8 max-w-4xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      {frontmatter.description && (
        <p class="text-xl text-base-content/70 mb-4">{frontmatter.description}</p>
      )}
      <div class="flex flex-wrap gap-2 text-sm text-base-content/60">
        {frontmatter.author && <span>By {frontmatter.author}</span>}
        {frontmatter.pubDate && <span>â€¢</span>}
        {frontmatter.pubDate && <time>{frontmatter.pubDate}</time>}
      </div>
    </header>
    
    <!-- 2. Rendered HTML will be passed into the default slot. -->
    <div class="prose dark:prose-invert max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
