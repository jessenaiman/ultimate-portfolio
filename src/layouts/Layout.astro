---
import Background from "../components/ui/Background.astro";
import Footer from "../components/ui/Footer.astro";
import Menu from "../components/ui/Menu.astro";
import LayoutHead from "../components/shared/LayoutHead.astro";
import BaseLayout from "../components/shared/BaseLayout.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
  showMenu?: boolean;
  showFooter?: boolean;
}

const {
  title,
  description,
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
  showMenu = true,
  showFooter = true,
} = Astro.props;
---
<BaseLayout
  title={title}
  description={description}
  primaryBallColor={primaryBallColor}
  secondaryBallColor={secondaryBallColor}
  gridColor={gridColor}
  diagonalColor={diagonalColor}
  vignetteColor={vignetteColor}
  showMenu={showMenu}
  showFooter={showFooter}
>
  <slot />
</BaseLayout>
