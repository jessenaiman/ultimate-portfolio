---
import BaseLayout from "../components/shared/BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  title,
  description,
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  primaryBallColor={primaryBallColor}
  secondaryBallColor={secondaryBallColor}
  gridColor={gridColor}
  diagonalColor={diagonalColor}
  vignetteColor={vignetteColor}
>
  <slot />
</BaseLayout>
