---
// Simple wrapper that forwards props to unified BaseLayout
// Documentation: https://docs.astro.build/en/guides/layouts/
import BaseLayout from "../components/shared/BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
  bgColor?: string;
  maxWidth?: 'none' | 'prose' | 'container';
  variant?: 'default' | 'documentation' | 'showcase';
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <slot />
</BaseLayout>
