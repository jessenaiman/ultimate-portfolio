---
// Simple wrapper that forwards props to unified BaseLayout
// Documentation: https://docs.astro.build/en/guides/layouts/
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
  maxWidth?: 'none' | 'prose' | 'container';
}

const { title, description, maxWidth } = Astro.props;
---

<BaseLayout title={title} description={description} maxWidth={maxWidth}>
  <slot />
</BaseLayout>
